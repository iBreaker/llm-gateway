{
  "name": "LLM Gateway Development",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "app",
  "workspaceFolder": "/workspaces/llm-gateway",
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-json",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "Prisma.prisma",
        "ms-vscode.vscode-docker",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-playwright.playwright",
        "orta.vscode-jest",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "ms-vscode.vscode-thunder-client"
      ],
      "settings": {
        "typescript.updateImportsOnFileMove.enabled": "always",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "files.associations": {
          "*.mdx": "markdown"
        },
        "emmet.includeLanguages": {
          "javascript": "javascriptreact",
          "typescript": "typescriptreact"
        }
      }
    }
  },

  "forwardPorts": [13000, 15432, 16379],
  "portsAttributes": {
    "13000": {
      "label": "LLM Gateway App",
      "onAutoForward": "notify"
    },
    "15432": {
      "label": "PostgreSQL Database"
    },
    "16379": {
      "label": "Redis Cache"
    }
  },

  "postCreateCommand": "npm install && npx prisma generate",
  "postStartCommand": "npm run db:push",
  
  "remoteUser": "node",
  "containerEnv": {
    "NODE_ENV": "development"
  },

  "mounts": [
    "source=llm-gateway-node-modules,target=/app/node_modules,type=volume"
  ]
}